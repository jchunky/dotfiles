{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "class-methods-use-this": "off",
    "import/no-default-export": "off",
    "import/prefer-default-export": "off",
    "no-shadow": "off",
    "no-unused-vars": "off",
    "no-use-before-define": "off",
    "prettier/prettier": "error"
  },
  "plugins": ["prettier"],
  "extends": [
    "plugin:you-dont-need-lodash-underscore/compatible",
    "prettier"
  ]
}
